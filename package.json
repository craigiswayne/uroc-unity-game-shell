{
  "name": "fugaso",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm run compile:sass:dev && npm run build:prod",
    "build:prod": "npm run compile:pug && npm run compile:sass && npm run minify:js && npm run package",
    "compile:pug": "pug index.pug --pretty",
    "compile:sass": "npm run compile:sass:prod && npm run compile:sass:dev",
    "compile:sass:prod": "sass TemplateData/shell.scss TemplateData/shell.min.css --no-source-map --style=compressed",
    "compile:sass:dev": "sass TemplateData/shell.scss TemplateData/shell.css",
    "compile:ts": "tsc shell-ts.ts",
    "minify:js": "uglifyjs TemplateData/shell.js --output TemplateData/shell.min.js",
    "package": "node package.js",
    "watch:pug": "npm run compile:pug -- --watch",
    "watch:sass": "npm run compile:sass:dev -- --watch",
    "watch:ts": "npm run compile:ts -- --watch"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "fs-extra": "^11.3.0",
    "globby": "^14.1.0",
    "pug": "^3.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.89.2",
    "uglify-js": "^3.19.3"
  },
  "devDependencies": {
    "lil-gui": "^0.20.0",
    "typescript": "^5.8.3"
  }
}
